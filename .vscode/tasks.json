{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-cli",
      "type": "typescript",
      "tsconfig": "packages/cli/tsconfig.json",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "group": "build"
    },

    {
      "label": "build-core",
      "type": "typescript",
      "tsconfig": "packages/core/tsconfig.json",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "build",
      "dependsOn": ["build-core", "build-cli"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
